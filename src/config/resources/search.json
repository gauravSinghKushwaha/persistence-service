{
  "description": "search criteria object",
  "type": "object",
  "properties": {
    "operation": {
      "type": "string",
      "description": "which operation this json schema represents",
      "required": true,
      "enum": [
        "search"
      ]
    },
    "schema": {
      "type": "string",
      "description": "DB schema to be used",
      "required": true
    },
    "table": {
      "type": "string",
      "required": true,
      "description": "DB table to be used"
    },
    "fields": {
      "type": "array",
      "required": true,
      "minItems": 1,
      "maxItems": 32,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "where": {
      "type": "object",
      "required": true,
      "minProperties": 1,
      "maxProperties": 8
    },
    "orderby": {
      "order": {
        "type": "array",
        "minItems": 1,
        "maxItems": 4,
        "uniqueItems": true,
        "items": {
          "type": "string"
        },
        "description": "ordering query result by these columns"
      },
      "by": {
        "type": "string",
        "optional": "asc",
        "disallow": [
          "boolean",
          "integer"
        ],
        "enum": [
          "ASC",
          "DESC"
        ],
        "description": "ascending or descending"
      }
    },
    "limit": {
      "type": "integer",
      "minLength": 1,
      "maxLength": 3,
      "minimum": 1,
      "maximum": 200,
      "disallow": [
        "boolean",
        "string"
      ],
      "description": "number of rows"
    },
    "offset": {
      "type": "integer",
      "minLength": 1,
      "maxLength": 3,
      "minimum": 1,
      "maximum": 999,
      "disallow": [
        "boolean",
        "string"
      ],
      "description": "starts from offset'th row of the result, and then limit. e.g. for offset 5 limit 10, 6th to 15th will be returned"
    }
  }
}