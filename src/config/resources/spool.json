{
  "description": "offline storage",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "description": "DB schema to be used",
      "required": true
    },
    "table": {
      "type": "string",
      "required": true,
      "description": "DB table to be used"
    },
    "cached": {
      "type": "boolean",
      "optional": "true",
      "description": "flag if resource to be cached"
    },
    "cacheexpiry": {
      "type": "integer",
      "optional": "1121212",
      "description": "cache expiry in miliseconds"
    },
    "attr": {
      "type": "object",
      "minProperties": 10,
      "maxProperties": 14,
      "required": true,
      "description": "resource object",
      "properties": {
        "seq": {
          "type": "integer",
          "minimum": 1,
          "maximum": 999999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "sequence"
        },
        "username": {
          "type": "string",
          "minLength": 4,
          "maxLength": 191,
          "disallow": [
            "boolean",
            "integer"
          ],
          "required": true,
          "description": "user name"
        },
        "xml": {
          "type": "string",
          "minLength": 32,
          "maxLength": 1024,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "offline message"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "created at date"
        }
      }
    }
  }
}