{
  "description": "Resource object",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "description": "DB schema to be used",
      "required": true
    },
    "table": {
      "type": "string",
      "required": true,
      "description": "DB table to be used"
    },
    "cached": {
      "type": "boolean",
      "optional": "true",
      "description": "flag if resource to be cached"
    },
    "cacheexpiry": {
      "type": "integer",
      "optional": "1121212",
      "description": "cache expiry in miliseconds"
    },
    "attr": {
      "type": "object",
      "minProperties": 10,
      "maxProperties": 14,
      "required": true,
      "description": "resource object",
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "primary key"
        },
        "user_id": {
          "type": "string",
          "minLength": 4,
          "maxLength": 128,
          "disallow": [
            "boolean",
            "integer"
          ],
          "required": true,
          "description": "user id generated by system"
        },
        "name": {
          "type": "string",
          "minLength": 4,
          "maxLength": 128,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "user display name generated by user"
        },
        "password": {
          "type": "string",
          "minLength": 7,
          "maxLength": 16,
          "disallow": [
            "boolean",
            "integer"
          ],
          "required": true,
          "description": "password"
        },
        "phonenumber": {
          "type": "integer",
          "minLength": 10,
          "maxLength": 12,
          "minimum": 100000000,
          "maximum": 999999999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "phonenumber of user"
        },
        "email": {
          "type": "string",
          "minLength": 10,
          "maxLength": 64,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "email"
        },
        "age": {
          "type": "integer",
          "minLength": 2,
          "maxLength": 3,
          "minimum": 16,
          "maximum": 100,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "age of user"
        },
        "status": {
          "type": "string",
          "optional": "active",
          "disallow": [
            "boolean",
            "integer"
          ],
          "enum": [
            "active",
            "inactive",
            "suspended"
          ],
          "required": true,
          "description": "cache expiry in milli seconds"
        },
        "domain": {
          "type": "string",
          "optional": "river.com",
          "disallow": [
            "boolean",
            "integer"
          ],
          "enum": [
            "river.com"
          ],
          "required": true,
          "description": "messenger domain"
        },
        "resource": {
          "type": "string",
          "minLength": 0,
          "maxLength": 128,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "messenger resource"
        },
        "created_on": {
          "type": "string",
          "disallow": [
            "boolean",
            "integer"
          ],
          "optional": "now()",
          "description": "created on date"
        },
        "created_by": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "optional": 1,
          "description": "created by id"
        },
        "update_on": {
          "type": "string",
          "disallow": [
            "boolean",
            "integer"
          ],
          "optional": "now()",
          "description": "updated on date"
        },
        "updated_by": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "optional": 1,
          "description": "updated by id"
        }
      },
      "dependencies": {
        "update_on": [
          "created_on",
          "created_by"
        ],
        "update_by": [
          "created_on",
          "created_by",
          "update_on"
        ]
      }
    },
    "conf": {
      "type": "object",
      "minProperties": 0,
      "maxProperties": 3,
      "required": true,
      "description": "conf about resource, e.g. which columns to hash and encrypt",
      "properties": {
        "hashobjs": {
          "type": "array",
          "minProperties": 0,
          "maxProperties": 14,
          "description": "column to hashed before saving to DB",
          "items": {
            "type": "string"
          }
        },
        "encryptobjs": {
          "type": "array",
          "minProperties": 0,
          "maxProperties": 14,
          "description": "column to encrypted before saving to DB",
          "items": {
            "type": "string"
          }
        },
        "autogenerated": {
          "type": "array",
          "minProperties": 0,
          "maxProperties": 14,
          "description": "column where values will be autogenerated like pk",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}