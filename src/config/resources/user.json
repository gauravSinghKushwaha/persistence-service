{
  "description": "USER",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "description": "DB schema to be used",
      "required": true
    },
    "table": {
      "type": "string",
      "required": true,
      "description": "DB table to be used"
    },
    "attr": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 14,
      "required": true,
      "description": "resource object",
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "primary key"
        },
        "username": {
          "type": "string",
          "minLength": 4,
          "maxLength": 128,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "username"
        },
        "display_name": {
          "type": "string",
          "minLength": 3,
          "maxLength": 128,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "user display name generated by user"
        },
        "password": {
          "type": "string",
          "minLength": 7,
          "maxLength": 16,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "password"
        },
        "phonenumber": {
          "type": "integer",
          "minLength": 5,
          "maxLength": 15,
          "minimum": 10000,
          "maximum": 999999999999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "phonenumber of user"
        },
        "gender": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "disallow": [
            "boolean",
            "integer"
          ],
          "enum": [
            "M",
            "F",
            "m",
            "f"
          ],
          "description": "gender"
        },
        "interest": {
          "type": "string",
          "minLength": 3,
          "maxLength": 256,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "interest"
        },
        "about": {
          "type": "string",
          "minLength": 3,
          "maxLength": 256,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "about"
        },
        "email": {
          "type": "string",
          "minLength": 10,
          "maxLength": 64,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "email"
        },
        "country": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "country"
        },
        "handle": {
          "type": "string",
          "minLength": 6,
          "maxLength": 32,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "country"
        },
        "age": {
          "type": "integer",
          "minLength": 2,
          "maxLength": 3,
          "minimum": 16,
          "maximum": 100,
          "disallow": [
            "boolean",
            "string"
          ],
          "description": "age of user"
        },
        "status": {
          "type": "string",
          "optional": "active",
          "disallow": [
            "boolean",
            "integer"
          ],
          "enum": [
            "active",
            "inactive",
            "suspended"
          ],
          "required": true,
          "description": "cache expiry in milli seconds"
        },
        "domain": {
          "type": "string",
          "optional": "river.com",
          "disallow": [
            "boolean",
            "integer"
          ],
          "enum": [
            "river.com"
          ],
          "description": "messenger domain"
        },
        "resource": {
          "type": "string",
          "minLength": 0,
          "maxLength": 128,
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "messenger resource"
        },
        "created_on": {
          "type": "string",
          "format": "date-time",
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "created on date"
        },
        "created_by": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "optional": 1,
          "description": "created by id"
        },
        "update_on": {
          "type": "string",
          "format": "date-time",
          "disallow": [
            "boolean",
            "integer"
          ],
          "description": "updated on date"
        },
        "updated_by": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999,
          "disallow": [
            "boolean",
            "string"
          ],
          "optional": 1,
          "description": "updated by id"
        }
      },
      "dependencies": {
        "update_by": [
          "update_on",
          "created_by"
        ]
      }
    }
  }
}